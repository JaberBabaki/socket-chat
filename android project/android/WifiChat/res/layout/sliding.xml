<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="220dip"
    android:layout_height="820dip"
    android:layout_gravity="right" android:background="#132535">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/lay_all_sliding"
            android:layout_width="220dip"
            android:layout_height="fill_parent"
            android:background="#132535"
            android:gravity="right"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/lay_search"
                android:layout_width="match_parent"
                android:layout_height="96dip"
                android:layout_marginRight="4dip"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/ImageView07"
                        android:layout_width="58dip"
                        android:layout_height="58dip"
                        android:src="@drawable/chat" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dip"
                        android:text="Chat"
                        android:textColor="#66798A"
                        android:textSize="20dip" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/ImageView02"
                android:layout_width="fill_parent"
                android:layout_height="4dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:src="#293949" />

            <LinearLayout
                android:id="@+id/lay_message"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_marginBottom="8dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="8dip"
                android:gravity="center" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="60dip"
                    android:layout_weight="0.7"
                    android:gravity="right|center"
                    android:text="Download"
                    android:textColor="#66798A"
                    android:textSize="20dip" />

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="38dip"
                    android:layout_height="38dip"
                    android:src="@drawable/down" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ImageView03"
                android:layout_width="fill_parent"
                android:layout_height="4dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:src="#293949" />

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:text="Developer"
                android:textColor="#66798A"
                android:textSize="20dip" />

            <TextView
                android:id="@+id/TextView05"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dip"
                android:layout_marginLeft="16dip"
                android:layout_marginTop="8dip"
                android:text="Jaber Babaki"
                android:textColor="#66798A"
                android:textSize="16dip" />

            <TextView
                android:id="@+id/TextView06"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dip"
                android:layout_marginLeft="16dip"
                android:layout_marginTop="8dip"
                android:text="jaber.babaki94@gmail.com"
                android:textColor="#66798A"
                android:textSize="16dip" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>