<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" android:background="#C61F3D">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="#11443D"
        android:gravity="right" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="right|center" >

            <TextView
                android:id="@+id/txt_online"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ffffff" android:text="Status"/>

            <ImageView
                android:id="@+id/men"
                android:layout_width="48dip"
                android:layout_height="30dip"
                android:src="@drawable/menuu" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip" android:layout_weight="0.7" android:background="#339085">

        <TextView
            android:id="@+id/txt_send"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="8dip"
            android:layout_weight="0.5"
            android:textColor="#ffffff"
            android:textSize="10dip" />

        <TextView
            android:id="@+id/txt_recive"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="8dip"
            android:layout_weight="0.5"
            android:gravity="right"
            android:textColor="#ffffff"
            android:textSize="10dip" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip" android:gravity="center" android:layout_weight="0.1" android:background="#339085">

        <EditText
            android:id="@+id/input"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:hint="Enter Message" android:background="@drawable/selector" android:layout_weight="0.8">

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/btn_attach"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_margin="4dip"
            android:layout_weight="0.2"
            android:background="@drawable/button_send"
            android:text="Attach" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:text="Send" android:layout_weight="0.2" android:background="@drawable/button_send" android:layout_margin="4dip"/>

    </LinearLayout>

</LinearLayout>